  <groupId>sharpc2b</groupId>
  <artifactId>generated-models</artifactId>
  <version>0.1-SNAPSHOT</version>

  <name>SHARPC-2B :: Model Conversion</name>

  <dependencies>

    <dependency>
      <groupId>net.sourceforge.owlapi</groupId>
      <artifactId>owlapi-api</artifactId>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>net.sourceforge.owlapi</groupId>
      <artifactId>owlapi-api</artifactId>
    </dependency>

  </dependencies>



  <build>

    <resources>
      <resource>
        <directory>${pom.basedir}/src/main/resources</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
      </resource>
    </resources>

    <plugins>

      <plugin>
        <groupId>org.drools</groupId>
        <artifactId>drools-shapes-xsd-processor-plugin</artifactId>
        <version>${chance.version}</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate-owl</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <schemaLocations>
            <param>${pom.basedir}/src/main/resources/xsd/vmr/datatypes-iso21090-clean.xsd</param>
            <param>${pom.basedir}/src/main/resources/xsd/vmr/vmr-clean.xsd</param>
            <param>${pom.basedir}/src/main/resources/xsd/arden/Arden.xsd</param>
            <param>${pom.basedir}/src/main/resources/xsd/HeD/knowledgedocument.xsd</param>
          </schemaLocations>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <goals>
              <goal>xjc</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <outputDirectory>${basedir}/target/generated-sources/java</outputDirectory>
          <packageName>org.hl7.v3.hed</packageName>
          <schemaDirectory>${basedir}/src/main/resources/xsd/HeD</schemaDirectory>
          <bindingDirectory>${basedir}/src/main/resources/xsd/HeD</bindingDirectory>
          <extension>true</extension>
          <clearOutputDir>false</clearOutputDir>
          <arguments>-no-header</arguments>
        </configuration>
      </plugin>


