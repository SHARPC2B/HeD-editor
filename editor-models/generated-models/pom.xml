      <!-- SHARP PLUGINS -->

      <plugin>
        <artifactId>skos-to-T-plugin</artifactId>
        <groupId>sharpc2b</groupId>
        <version>0.1-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate-skos-abox-to-tbox</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <inputOntologyFile>${pom.basedir}/src/main/resources/ontologies/icd9-pub.ofn</inputOntologyFile>
          <outputOntologyFile>${pom.basedir}/target/generated-sources/ontologies/icd9-T.ofn</outputOntologyFile>
          <outputOntologyIriString>http://asu.edu/sharpc2b/icd9-T</outputOntologyIriString>
          <alternateResourceDir>${pom.basedir}/src/main/resources</alternateResourceDir>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>T-to-A-plugin</artifactId>
        <groupId>sharpc2b</groupId>
        <version>0.1-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate-tbox-to-abox</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <tToAConfigResourcePath>${pom.basedir}/src/main/resources/OWL-to-Sharp-ABox-Concepts.properties</tToAConfigResourcePath>
          <inputOntologyFile>${pom.basedir}/target/generated-sources/vmr-clean.xsd.ttl</inputOntologyFile>
          <outputOntologyFile>${pom.basedir}/target/generated-sources/ontologies/vmr-clean-A.ofn</outputOntologyFile>
          <outputOntologyIriString>http://asu.edu/sharpc2b/vmr-clean-A</outputOntologyIriString>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>define-operators-plugin</artifactId>
        <groupId>sharpc2b</groupId>
        <version>0.1-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>define-operators</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <operatorDefinitionFile>${pom.basedir}/src/main/resources/SharpOperators.xlsx</operatorDefinitionFile>
          <outputOntologyFile>${pom.basedir}/target/generated-sources/ontologies/sharp_operators.ofn</outputOntologyFile>
          <outputOntologyIriString>http://asu.edu/sharpc2b/ops</outputOntologyIriString>
        </configuration>
      </plugin>

    </plugins>
  </build>

