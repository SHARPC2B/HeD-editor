<xs:schema elementFormDefault="qualified" targetNamespace="http://asu.edu/test"
           xmlns="http://asu.edu/test" xmlns:xs="http://www.w3.org/2001/XMLSchema">


  <xs:complexType name="Source">
      <xs:sequence>
        <xs:element name="field" type="Target" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Target">
      <xs:sequence>
        <xs:element name="desc" type="xs:string" />
        <xs:element name="field" type="Target" minOccurs="0" maxOccurs="unbounded"/>
      </xs:sequence>
  </xs:complexType>


  <xs:complexType name="Left">
    <xs:sequence>
      <xs:element name="link" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="pointer" type="Target" minOccurs="1" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>


</xs:schema>

